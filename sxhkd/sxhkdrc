# Bspwm {{{

# Focus node
super + k
    bspc node -f north
super + j
    bspc node -f south
super + h
    bspc node -f west
super + l
    bspc node -f east

# Swap node
super + shift + h
super + shift + j
super + shift + k
super + shift + l

# Focus desktop / transfer node to desktop
super + {_,Shift + }{1-9,0}
    bspc {desktop -f,node -d} focused:^{1-9,10}

# Toggle fullscreen/floating state
super + shift + f
    bspc node -t \~fullscreen
super + space
    bspc node -t \~floating || bspc node -t \~tiled

# Close/kill current window
super + {_,shift + }q
    bspc node -{c,k}

# Swap the current node with the biggest node
super + s
    bspc node -s biggest

# Rotate the tree that the current window belongs to
super + {_,shift + }c
    bspc node @parent -R {90,270}

# Focus on the clicked node
~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + @button{1-3}
    bspc pointer -u
# }}}
# Application launcher{{{

# Launch app with root privileges
super + shift + d
    sudo $(rofi -dmenu)

# Launch app without root privileges
super + d
    $(rofi -dmenu)

# }}}
